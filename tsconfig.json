{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@test-utils": ["./modules/test-utils.tsx"],
      "@styles/*": ["./styles/*"],
      "@constants": ["./modules/constants.ts"],
      "@design/*": ["./modules/design/*"],
      "@components": ["./components/index"],
      "@layouts": ["./layouts/index"],
      "@views/*": ["./views/*"],
      "@elements/*": ["./modules/elements/*"],
      "@redux/*": ["./modules/redux/*"]
      // "@design-system/*": ["./modules/design-system/*"],
      // "@elements/*": ["./modules/elements/*"],
      // "@elements": ["./modules/elements/index"],
      // "@api/*": ["./modules/api/*"],
      // "@api": ["./modules/api/index"],
      // "@constants/*": ["./modules/constants/*"],
      // "@hooks/*": ["./modules/hooks/*"],
      // "@hooks": ["./modules/hooks/index"],
      // "@redux/*": ["./modules/redux/*"],
      // "@typescript/*": ["./modules/typescript/*"],
      // "@utils/*": ["./modules/utils/*"],
      // "@typescript": ["./modules/typescript/index"],
      // "@components/*": ["./components/*"],
      // "@views/*": ["./views/*"]
    }
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    "**/*.js"
, "src/views/home/home.data.tsz"  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "__tests__",
    "**/*.tests.ts",
    "**/*.tests.tsx",
    "**/*.builder.ts",
    "__mocks__",
    ".vercel",
    ".jest",
    "modules/test-utils.tsx"
  ]
}
